<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="CalcStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="CalcPanelStyle" parent="CalcStyle">
        <item name="android:textSize">@dimen/btnTextSize</item>
        <item name="android:layout_margin">@dimen/btnMargin</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="CalcKeyStyle" parent="CalcPanelStyle">
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="CalcManagerStyle" parent="CalcPanelStyle">
        <item name="android:backgroundTint">@android:color/holo_orange_light</item>
    </style>

    <style name="CalcPanelStyleLand" parent="CalcStyle">
        <item name="android:textSize">@dimen/btnTextSizeLand</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="cornerRadius">80dp</item>
    </style>

    <style name="CalcKeyStyleLand" parent="CalcPanelStyleLand">
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="CalcManagerStyleLand" parent="CalcPanelStyleLand">
        <item name="android:backgroundTint">@android:color/holo_orange_light</item>
    </style>

</resources>